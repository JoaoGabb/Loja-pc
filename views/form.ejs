<!doctype html>
<html lang="pt-BR">
<head><meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/><title><%= produto ? 'Editar' : 'Novo' %> Produto</title><link rel="stylesheet" href="/style.css"></head>
<body class="bg">
  <div class="overlay"></div>
  <header class="header">
    <div class="brand">Loja de computador</div>
    <nav><a href="/produtos">Produtos</a></nav>
  </header>

  <main class="container main">
    <div class="card form-card">
      <h2><%= produto ? 'Editar produto' : 'Novo produto' %></h2>
      <form method="post" action="<%= produto ? ('/produtos/editar/'+produto.id) : '/produtos' %>">
        <div class="row"><label>Nome</label><input name="nome" required value="<%= produto ? produto.nome : '' %>"/></div>
        <div class="row"><label>Descrição</label><textarea name="descricao"><%= produto ? produto.descricao : '' %></textarea></div>
        <div class="row cols"><div><label>Preço (R$)</label><input name="preco" type="number" step="0.01" required value="<%= produto ? produto.preco : '0.00' %>"/></div><div><label>Quantidade</label><input name="quantidade" type="number" required value="<%= produto ? produto.quantidade : '0' %>"/></div></div>
        <div class="actions"><button class="btn primary" type="submit">Salvar</button><a class="btn" href="/produtos">Cancelar</a></div>
      </form>
    </div>
  </main>

  <footer class="footer">Loja de Computador — ERP (projeto universitário)</footer>
</body>
</html>
